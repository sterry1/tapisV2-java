{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "http://tapis.tacc.utexas.edu/UserHasRoleMultiRequest",
    "description": "Top-level schema for a request to check a user's role or roles.",
    "additionalProperties": false,
    "type": "object",
        "properties": {
          "tenant": {
            "type": "string"
          },
          "user": {
            "type": "string"
          },
          "roleNames": {
            "type": "array",
            "items": {"type": "string"}
          }
        },
    "required": [
        "tenant",
        "user", 
        "roleNames"
    ]
}


