{
  "$id": "http://tapis.tacc.utexas.edu/PermsRequest",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Schema for a permissions request - grant or revoke",
  "additionalProperties": false,

  "type": "object",
  "properties": {
    "permissions": {
      "type": "array",
      "items": {
        "type": "string",
        "minItems": 1,
        "maxItems": 3,
        "uniqueItems": true,
        "enum": ["READ","MODIFY","DELETE","read","modify","delete","*"]
      }
    }
  },

  "required": [
    "permissions"
  ]
}
